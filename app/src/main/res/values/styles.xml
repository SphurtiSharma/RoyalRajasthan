<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="H1">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">@dimen/h1_text_size</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="H3" parent="H1">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/h3_text_size</item>
    </style>
    <style name="H2" parent="H1">
        <item name="android:textSize">@dimen/h2_text_size</item>
    </style>
    <style name="Body" parent="H2">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name = "libreFamily">
        <item name="android:fontFamily">@font/libre</item>
        <item name="android:textStyle">italic</item>
        <item name = "android:textSize">@dimen/h3_text_size</item>
    </style>
    <style name="spinnerTheme">
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">@font/libre</item>
        <item name = "android:textSize">@dimen/h3_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextStyle194">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>
</resources>